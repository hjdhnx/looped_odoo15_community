<odoo>
    <data>
    <record	id="late_back_from_leave_wizard"	model="ir.ui.view">
            <field	name="name">late_back_from_leave_wizard</field>
            <field	name="model">late.back.from.leave.wizard</field>
            <field	name="arch"	type="xml">
                <form>
                    <group>
                        <div>
                            <field	name="message" readonly="1"/>
                        </div>
                    </group>
                    <group>
                        <div>
                            <div>
                                <label for="choice" />
                            </div>
                            <div>
                                <field	name="choice" widget="radio" />
                            </div>
                        </div>
                    </group>
                    <footer>
                        <button name="confirm" type="object" string="Confirm"/>
                        <button	special="cancel" string="Back"/>
                    </footer>
                 </form>
            </field>
    </record>


    </data>
</odoo>