<odoo>
    <data>
        <record id="view_pos_configuration_form" model="ir.ui.view">
            <field name="name">pos.config.form.view.inherited</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='category_reference']" position="before">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="product_calories"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="product_calories"/>
                            <div class="text-muted">
                                Add Calories to POS Order
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>